#include "HALL.h"

volatile uint8_t hall_1=0;
volatile uint8_t hall_2=0;

void USART3_custom_init(){

    USART3->CR1 |= USART_CR1_TE;
    USART3->CR1 |= USART_CR1_RE;

    USART3->CR1 &= ~USART_CR1_TXEIE;
    USART3->CR1 &= ~USART_CR1_RXNEIE;

    USART3->CR1 |= USART_CR1_UE;
}


void Hall_0_interr();
void Hall_1_interr();
void Hall_2_interr();






